<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/default_margin"
    android:background="@drawable/bg_word"
    android:layout_margin="5dp"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/level_bottom_icon"
        android:layout_height="@dimen/level_bottom_icon"
        android:src="@drawable/ic_correct"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/img_result"/>

    <ImageView
        android:id="@+id/btn_search"
        style="@style/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:backgroundTint="@color/grey"
        android:src="@drawable/ic_search"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/btn_search"
        android:layout_toEndOf="@id/img_result"
        android:layout_alignParentTop="true"
        style="@style/subtitle"
        android:textStyle="bold"
        android:text="Auto Correct"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:id="@+id/txt_correct_word"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/btn_search"
        android:layout_toEndOf="@id/img_result"
        android:layout_below="@id/txt_correct_word"
        android:layout_marginHorizontal="@dimen/default_margin"
        style="@style/content"
        android:text="ffffff\n"
        android:id="@+id/txt_detail"/>
</RelativeLayout>